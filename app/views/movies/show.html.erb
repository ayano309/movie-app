<div class="container">
  <div class="card mt-3" style="width: 80%">
    <div class="card-image"><%= image_tag @movie.get_image, width: '100%', height: '100%'%></div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><strong><%= @movie.date %></strong></li>
      <h1 class="card-title list-group-item"><strong><%= @movie.title %></strong></h1>
      <li class="list-group-item"><strong>監督</strong> <%= @movie.director %></li>
      <li class="list-group-item"><strong>出演</strong> <%= @movie.appearance %></li>
    </ul>
    <div class="card-body">
      <p class="card-text"> <%= @movie.body %></p>
    </div>
  </div>
  <%= link_to "back" ,movies_path ,class:"btn btn-outline-dark"%>
  <%= link_to "edit" ,edit_movie_path(@movie),class:"btn btn-outline-success"%>
  <%= link_to "delete" ,movie_path(@movie) ,data:{method: 'delete',confirm:'本当に削除してもよろしいですか？'},class:"btn btn-outline-danger"%>

  

  <!--コメント表示-->
<div>
  <p>コメント件数：<%= @movie.comments.count %></p>
  <% @movie.comments.each do |comment| %>
    
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %>
    <%= comment.content %>
    <div class="icon">
      <% if comment.kao == "happy"%>
        <i class="fas fa-laugh-beam fa-2x"></i>
      <%elsif comment.kao == "anger"%>
        <i class="fas fa-angry fa-2x"></i>
      <%elsif comment.kao == "sad"%>
        <i class="fas fa-tired fa-2x"></i>
      <%elsif comment.kao == "mujyou"%>
        <i class="fas fa-meh fa-2x"></i>
      <%end%>
    </div>
    <!--<%= comment.kao_i18n %> -->
    <br>
    <% if comment.favorited_by?(current_user) %>
      <%= link_to movie_comment_favorites_path(comment.movie,comment), method: :delete do %>
        <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
        <%= comment.favorites.count %> いいねhazusu
      <% end %>
    <% else %>
      <%= link_to movie_comment_favorites_path(comment.movie,comment), method: :post do %>
        <i class="fas fa-heart" aria-hidden="true"></i>
        <%= comment.favorites.count %> いいね
      <% end %>
    <% end %>
    <!--コメントした人だけが削除できる-->
    <% if comment.user == current_user %>
      <%= link_to "削除", movie_comment_path(comment.movie, comment), method: :delete %>
    <% end %>
    <br>
  <% end %>
</div>

<!--コメント投稿-->
<div>
  <!--ネストしているから-->
  <%= form_with model: [@movie, @comment] do |f| %>
    <%= f.collection_radio_buttons :kao, Comment.kaos_i18n, :first , :last do |b|%>
      <%= b.label(class: "radio_button") { b.radio_button(class: "radio_button") + b.text }%>
    <% end %>
    <br>
    <!--<%= f.select  :kao, Comment.kaos_i18n.invert, {include_blank: "感情を選択してください"}, {class: "form-control", required: true} %>-->
    <%= f.text_area :content, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>
</div>