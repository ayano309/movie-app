<% if comment.favorited_by?(current_user) %>
  <%= link_to movie_comment_favorites_path(comment.movie,comment), method: :delete ,remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= comment.favorites.count %> いいねhazusu
  <% end %>
<% else %>
  <%= link_to movie_comment_favorites_path(comment.movie,comment), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= comment.favorites.count %> いいね
  <% end %>
<% end %>